@prefix td: <https://www.w3.org/2019/wot/td#> .
@prefix htv: <http://www.w3.org/2011/http#> .
@prefix hctl: <https://www.w3.org/2019/wot/hypermedia#> .
@prefix wotsec: <https://www.w3.org/2019/wot/security#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix js: <https://www.w3.org/2019/wot/json-schema#> .
@prefix saref: <https://w3id.org/saref#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://raw.githubusercontent.com/bruno-szdl/simulated-smartbuilding-tds/main/TD/lightbulb2.ttl>
 a td:Thing, saref:LightSwitch;
 td:title "Lightbulb thing";
 td:hasSecurityConfiguration [ a wotsec:NoSecurityScheme
   ];
 td:hasPropertyAffordance [ a td:PropertyAffordance, saref:OnOffState, js:BooleanSchema;
     td:name "state";
     td:title "state";
     td:hasForm [
         hctl:hasTarget <http://192.168.15.8:5000/smartbuilding/rooms/meetingroom/artifacts/lightbulb2/state>;
         hctl:forContentType "application/json";
         hctl:hasOperationType td:readProperty, td:writeProperty
       ];
     td:isObservable false
   ], [ a td:PropertyAffordance, js:StringSchema;
     td:name "Color";
     td:title "Color";
     td:hasForm [
         hctl:hasTarget <http://192.168.15.8:5000/smartbuilding/rooms/meetingroom/artifacts/lightbulb2/color>;
         hctl:forContentType "application/json";
         hctl:hasOperationType td:readProperty, td:writeProperty
       ];
     td:isObservable false
   ];
 td:hasActionAffordance [ a td:ActionAffordance, saref:ToggleCommand;
     td:name "toggle";
     td:title "Toggle";
     td:hasForm [
         htv:methodName "PUT";
         hctl:hasTarget <http://192.168.15.8:5000/smartbuilding/rooms/meetingroom/artifacts/lightbulb2/toggle>;
         hctl:forContentType "application/json";
         hctl:hasOperationType td:invokeAction
       ];
     td:hasInputSchema [ a js:ObjectSchema, saref:OnOffState;
         js:properties [ a js:BooleanSchema;
             js:propertyName "state"
           ];
         js:required "state"
       ]
   ], [ a td:ActionAffordance;
     td:name "changeColor";
     td:title "Change color";
     td:hasForm [
         htv:methodName "PUT";
         hctl:hasTarget <http://192.168.15.8:5000/smartbuilding/rooms/meetingroom/artifacts/lightbulb2/color>;
         hctl:forContentType "application/json";
         hctl:hasOperationType td:invokeAction
       ];
     td:hasInputSchema [ a js:ObjectSchema;
         js:properties [ a js:StringSchema;
             js:propertyName "color"
           ];
         js:required "color"
       ]
   ] .