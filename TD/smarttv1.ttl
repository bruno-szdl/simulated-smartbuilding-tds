      td:title "Get State";
      td:name "state";
      td:hasForm [
          hctl:hasTarget <http://localhost:5000/smartbuilding/rooms/meetingroom/artifacts/smarttv1/state>;
          hctl:forContentType "application/json";
          hctl:hasOperationType td:readProperty
        ];
      td:isObservable false;
    ], [ a td:PropertyAffordance, js:IntegerSchema;
      td:title "Get Channel";
      td:name "channel";
      td:hasForm [
          hctl:hasTarget <http://localhost:5000/smartbuilding/rooms/meetingroom/artifacts/smarttv1/channel>;
          hctl:forContentType "application/json";
          hctl:hasOperationType td:readProperty
        ];
      td:isObservable false;
    ];
  td:title "smarttv1";
  td:hasBase <http://localhost:5000/smartbuilding/rooms/meetingroom/artifacts/smarttv1/> .