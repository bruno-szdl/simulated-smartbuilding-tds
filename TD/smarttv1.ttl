@prefix hctl: <https://www.w3.org/2019/wot/hypermedia#> .
@prefix js: <https://www.w3.org/2019/wot/json-schema#> .

<http://localhost:5000/smartbuilding/rooms/meetingroom/artifacts/smarttv1>
  a td:Thing, eve:Artifact;
  td:hasActionAffordance [ a td:ActionAffordance;
      td:title "Turn On";
      td:name "TurnOn";
      td:hasForm [
          htv:methodName "PUT";
          hctl:hasTarget <http://localhost:5000/smartbuilding/rooms/meetingroom/artifacts/smarttv1/turnOn>;
          hctl:forContentType "application/json";
          hctl:hasOperationType td:invokeAction
        ]
    ], [ a td:ActionAffordance;
      td:title "Turn Off";
      td:name "TurnOff";
      td:hasForm [
          htv:methodName "PUT";
          hctl:hasTarget <http://localhost:5000/smartbuilding/rooms/meetingroom/artifacts/smarttv1/turnOff>;
          hctl:forContentType "application/json";
          hctl:hasOperationType td:invokeAction
        ]
    ], [ a td:ActionAffordance;
      td:hasInputSchema [ a js:ObjectSchema;
          js:properties [ a js:IntegerSchema;
              js:propertyName "channel";
            ];
          js:required "channel"
        ];
      td:title "Set Channel";
      td:name "setChannel";
      td:hasForm [
          htv:methodName "PUT";
          hctl:hasTarget <http://localhost:5000/smartbuilding/rooms/meetingroom/artifacts/smarttv1/channel>;
          hctl:forContentType "application/json";
          hctl:hasOperationType td:invokeAction
        ]
    ];
