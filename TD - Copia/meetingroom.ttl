<http://raw.githubusercontent.com/bruno-szdl/simulated-smartbuilding-tds/main/TD/meetingroom.ttl>
  a td:Thing, eve:EnvironmentArtifact;
  dct:title "Meeting room thing";
  td:hasSecurityConfiguration [ a wotsec:NoSecurityScheme
    ];
  td:hasActionAffordance [ a td:ActionAffordance, eve:MakeWorkspace;
      td:name "makeMeetingRoom";
      dct:title "Make Workspace";
      td:hasForm [
          htv:methodName "POST";
          hctl:hasTarget <http://localhost:5000/smartbuilding/rooms/meetingroom/devices/>;
          hctl:forContentType "application/json";
          hctl:hasOperationType td:invokeAction
        ]
    ];
  eve:contains <http://localhost:5000/smartbuilding/rooms/meetingroom/devices/lightbulb1>,
    <http://localhost:5000/smartbuilding/rooms/meetingroom/devices/lightbulb2> .